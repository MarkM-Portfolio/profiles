<sqlMapConfig>

	<!-- <properties resource="properties/database.properties" />-->
	<settings cacheModelsEnabled="true"/>

	<transactionManager type="JDBC">
		<dataSource type="SIMPLE">
			<property value="${jdbc_driver}" name="JDBC.Driver" />
			<property value="${jdbc_url}" name="JDBC.ConnectionURL" />
			<property value="${jdbc_username}" name="JDBC.Username" />
			<property value="${jdbc_password}" name="JDBC.Password" />
		</dataSource>
 	</transactionManager>

	<!-- NOTE: Employee.xml must be included first -->
	<sqlMap resource="com/ibm/peoplepages/internal/service/store/sqlmapdao/sql/Employee.xml" />
