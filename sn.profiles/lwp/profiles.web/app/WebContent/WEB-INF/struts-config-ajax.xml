<struts-config>

	<form-beans />
	<global-exceptions />
	<global-forwards />

	<action-mappings>
		<action path="/ajax/searchProfiles" type="com.ibm.peoplepages.webui.actions.AuthenticatedUserAction">
			<forward name="success" path="scene2.search_profiles_view"/>
		</action>
		<action path="/ajax/invitationAccess" type="com.ibm.peoplepages.webui.actions.ProfileViewAction">
       	 	<forward name="profileView" path="/WEB-INF/jsps/ajax/invitationStatus.jsp" />
	    </action>	
		<action path="/ajax/businessCard" type="com.ibm.peoplepages.webui.actions.ProfileViewAction">
       	 	<forward name="profileView" path="/WEB-INF/jsps/ajax/businessCard.jsp" />
       	 	<forward name="uiUserNotFound" path="/WEB-INF/jsps/ajax/invalidBusinessCard.jsp" />
	    </action>	
	</action-mappings>
</struts-config>
