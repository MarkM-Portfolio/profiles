<form-validation>
   <global>
   		<validator name="maxbytelength"
            classname="com.ibm.peoplepages.validator.MaxByteLengthValidator"
               method="validateMaxByteLength"
         methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
              depends=""
                  msg="errors.maxlength" 
          jsFunction="com.ibm.peoplepages.validator.javascript.validateMaxByteLength" />
        <validator name="minbytelength"
            classname="com.ibm.peoplepages.validator.MinByteLengthValidator"
               method="validateMinByteLength"
         methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
              depends=""
                  msg="errors.minlength" 
           jsFunction="com.ibm.peoplepages.validator.javascript.validateMinByteLength" />
   		<validator name="maxfilesize"
            classname="com.ibm.peoplepages.validator.FileSizeValidator"
               method="validateFileSize"
         methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
              depends=""
                  msg="errors.maxfilesize" />
        <validator name="allowedfiletypes"
            classname="com.ibm.peoplepages.validator.FileTypeValidator"
               method="validateFileType"
         methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
              depends=""
                  msg="errors.filetype" />
        <validator name="nonce"
            classname="com.ibm.peoplepages.validator.SessionExpirationValidator"
               method="validateNonce"
         methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
              depends=""
                  msg="error.sessionTimeout" />
   </global>
</form-validation>
