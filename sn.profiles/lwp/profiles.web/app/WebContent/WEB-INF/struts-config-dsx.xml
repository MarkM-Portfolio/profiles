<struts-config>

	<!-- Global Exceptions -->
	<global-exceptions>
	</global-exceptions>

	<!-- Global Forwards -->
	<global-forwards>
	</global-forwards>
	
	<!-- Action Mappings -->
	<action-mappings>
		<action path="/dsx/search" scope="request" type="com.ibm.lconn.profiles.dsx.actions.ProfileSearchAction">
			<exception key="error.atomGeneral" type="java.lang.Exception" path="/WEB-INF/jsps/atom/error.jsp"/>	
			<exception key="error.atomDatabase" type="com.ibm.peoplepages.service.DataAccessRetrieveException" path="/WEB-INF/jsps/atom/error.jsp"/>
		</action>	
		<action path="/dsx/instance" scope="request" type="com.ibm.lconn.profiles.dsx.actions.ProfileAction">
			<exception key="error.atomGeneral" type="java.lang.Exception" path="/WEB-INF/jsps/atom/error.jsp"/>	
			<exception key="error.atomDatabase" type="com.ibm.peoplepages.service.DataAccessRetrieveException" path="/WEB-INF/jsps/atom/error.jsp"/>	
		</action>
	</action-mappings>
</struts-config>
