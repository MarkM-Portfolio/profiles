<struts-config>

	<form-beans>
	</form-beans>

	<global-exceptions>
	</global-exceptions>

	<global-forwards>
	</global-forwards>

	<action-mappings>
		<action path="/json/profile" type="com.ibm.peoplepages.json.actions.ProfileAction">
			<forward name="profile" path="/WEB-INF/jsps/json/profile.jsp" />
		</action>

		<!--RTC 188295 bulk query of profKey by external ID & external ID by profKey -->
		<action path="/json/profileBulk" type="com.ibm.peoplepages.json.actions.ProfileBulkAction">
		</action>

		<!--added special entry for semantic tag so we can have something other than basic auth -->
		<action path="/json/semanticTagProfileView" type="com.ibm.peoplepages.json.actions.ProfileAction">
			<forward name="profile" path="/WEB-INF/jsps/json/profile.jsp" />
		</action>
		
		<!--To query profile key by login ID -->
		<action path="/json/profileKey" type="com.ibm.peoplepages.json.actions.ProfileLoginAction">
			<forward name="profileKey" path="/WEB-INF/jsps/json/profileKey.jsp" />
		</action>
	</action-mappings>
</struts-config>
