<sqlMap namespace="ProfileConstants">

	<select id="getValue" parameterClass="string" resultClass="string">
		select PROF_PROPERTY_VALUE
		from EMPINST.PROF_CONSTANTS
		where PROF_PROPERTY_KEY = #key#
	</select>

	<update id="setValue" parameterClass="map">
		update EMPINST.PROF_CONSTANTS
		set PROF_PROPERTY_VALUE = #value#
		where PROF_PROPERTY_KEY = #key#
	</update>

	<update id="insertValue" parameterClass="map">
		insert into EMPINST.PROF_CONSTANTS
		(PROF_PROPERTY_KEY,PROF_PROPERTY_VALUE)
		values
		(#key#,#value#)
	</update>

</sqlMap>
