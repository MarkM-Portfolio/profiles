<config id = "profiles-policy"
		xmlns="http://www.ibm.com/profiles-policy"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.ibm.com/profiles-policy internal-profiles-policy.xsd">
<!--
	This is the internal policy features XML configuration file used for Single-Tenant
	environments.  This configuration will be loaded into Profiles as not-modifiable.
	It is imperative that this be a complete list of all Out-Of-The-Box Policy 
	configurations as this is the baseline against which the customer-loaded 
	profiles-policy.xml file will be loaded from the LCC directory.  
	
	If a permission is not explicitly defined in here, it can be overridden from 
	the profiles-policy.xml	in the LCC directory.  So edit/remove stuff from here
	with care.
-->
	<features>
		<feature name="profile.board">
			<profileType enabled="true">
				<acl name="profile.board.write.message" scope="person_and_self" />
				<acl name="profile.board.write.comment" scope="person_and_self" />
				<acl name="profile.board.recommend.message" scope="person_and_self" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.status">
			<profileType enabled="true">
				<acl name="profile.status.view" scope="reader" />
				<acl name="profile.status.update" scope="self" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.search">
			<profileType enabled="true">
				<acl name="profile.search.view" scope="reader" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.sand">
			<profileType enabled="true">
				<acl name="profile.sand.dyk.view" scope="reader" />
				<acl name="profile.sand.recommend.view" scope="reader" />
				<acl name="profile.sand.inCommon.view" scope="reader" />
				<acl name="profile.sand.socialPath.view" scope="reader" />
			</profileType>		
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.activitystream">
			<profileType enabled="true">
				<acl name="profile.activitystream.targetted.event" scope="person_and_self" />
			</profileType>		
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.connection">
			<profileType enabled="true">
				<acl name="profile.connection.view" scope="reader" />
				<acl name="profile.connection.message.view" scope="self" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.colleague">
			<profileType enabled="true">
				<acl name="profile.colleague.connect" scope="person_not_self" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.following">
			<profileType enabled="true">
				<acl name="profile.following.view" scope="reader" />
				<acl name="profile.following.add" scope="person_not_self" />
			</profileType>
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.peopleManaged">
			<profileType enabled="true" />	
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.reportTo">
			<profileType enabled="true">
				<acl name="profile.reportTo.view" scope="reader" />
			</profileType>
			<profileType actorMode="external" mode="external" enabled="false" />
			<profileType actorMode="external" mode="internal" enabled="false" />
		</feature>
		<feature name="profile.typeAhead">
			<profileType enabled="true">
				<acl name="profile.typeAhead.view" scope="reader" />
			</profileType>		
			<profileType actorMode="external" enabled="false" />
			<profileType mode="external" enabled="false" />
		</feature>
		<feature name="profile.tag">
			<profileType enabled="true">
				<acl name="profile.tag.view" scope="reader" />
				<acl name="profile.tag.add" scope="person_and_self" />
			</profileType>		
			<profileType actorMode="external" mode="external" enabled="true">
				<acl name="profile.tag.add" scope="self" />
			</profileType>
		</feature>
		<feature name="profile.profile">
			<profileType enabled="true">
				<acl name="profile.profile.view" scope="reader" />
				<acl name="profile.profile.edit" scope="self" />
			</profileType>
			<profileType actorMode="external" enabled="true">
				<acl name="profile.profile.view" scope="self" />
			</profileType>
		</feature>
		<feature name="profile.photo">
			<profileType enabled="true">
				<acl name="profile.photo.view" scope="reader" />
				<acl name="profile.photo.update" scope="self" />
			</profileType>
		</feature>
		<feature name="profile.pronunciation">
			<profileType enabled="true">
				<acl name="profile.pronunciation.view" scope="reader" />
				<acl name="profile.pronunciation.update" scope="self" />
			</profileType>
		</feature>
		<feature name="profile.extension">
			<profileType enabled="true">
				<acl name="profile.extension.view" scope="reader" />
				<acl name="profile.extension.edit" scope="self" />
			</profileType>
		</feature>
		<feature name="profile.link">
			<profileType enabled="true">
				<acl name="profile.link.update" scope="self" />
			</profileType>
		</feature>
	</features>
</config>